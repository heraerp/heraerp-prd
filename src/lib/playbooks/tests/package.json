{
  "name": "@hera/playbook-tests",
  "version": "1.0.0",
  "description": "Test suite for HERA Playbook system",
  "scripts": {
    "test": "jest",
    "test:all": "ts-node run-all-tests.ts",
    "test:unit": "jest tests/unit",
    "test:golden": "jest tests/golden-path",
    "test:failure": "jest tests/failure-scenarios",
    "test:property": "jest tests/property-based",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:clear-cache": "jest --clearCache",
    "test:update-snapshots": "jest --updateSnapshot",
    "verify": "ts-node verify-checklist.ts",
    "verify:json": "ts-node verify-checklist.ts -f json -o verification-report.json",
    "verify:verbose": "ts-node verify-checklist.ts -v -m",
    "verify:ci": "ts-node verify-checklist.ts -f json -o coverage-report.json -b --badge-output coverage.svg"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "chalk": "^4.1.2",
    "glob": "^10.3.0",
    "jest": "^29.5.0",
    "jest-html-reporter": "^3.10.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.0",
    "minimist": "^1.2.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/minimist": "^1.2.2"
  }
}
