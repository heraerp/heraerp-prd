{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schedule Campaign",
  "description": "Schema for scheduling a campaign",
  "type": "object",
  "required": ["schedule_at"],
  "properties": {
    "schedule_at": {
      "type": "string",
      "format": "date-time",
      "description": "When to send the campaign"
    },
    "throttle_per_min": {
      "type": ["integer", "null"],
      "minimum": 1,
      "maximum": 1000,
      "description": "Maximum messages to send per minute"
    },
    "timezone_aware": {
      "type": "boolean",
      "default": true,
      "description": "Send at scheduled time in recipient's timezone"
    }
  }
}