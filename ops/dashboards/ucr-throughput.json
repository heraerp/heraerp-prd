{
  "dashboard": {
    "title": "HERA UCR Throughput",
    "uid": "hera-ucr-throughput",
    "version": 1,
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "UCR Decisions/sec",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(ucr_decisions_total[1m])) by (rule_type)",
            "legendFormat": "{{rule_type}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Evaluation Latency (p50/p95/p99)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(ucr_eval_latency_ms_bucket[5m])) by (le))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(ucr_eval_latency_ms_bucket[5m])) by (le))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(ucr_eval_latency_ms_bucket[5m])) by (le))",
            "legendFormat": "p99"
          }
        ]
      },
      {
        "id": 3,
        "title": "Active Rules by Organization",
        "type": "bargraph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(ucr_active_rules) by (organization_id, rule_family)"
          }
        ]
      },
      {
        "id": 4,
        "title": "Decision Results Distribution",
        "type": "piechart",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(ucr_decisions_total) by (result)"
          }
        ]
      },
      {
        "id": 5,
        "title": "Complex vs Simple Rule Performance",
        "type": "graph",
        "gridPos": { "x": 0, "y": 16, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(ucr_eval_latency_ms_bucket[5m])) by (complexity, le))",
            "legendFormat": "{{complexity}}"
          }
        ]
      }
    ]
  }
}