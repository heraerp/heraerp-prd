{
  "dashboard": {
    "title": "HERA API Performance (p95)",
    "uid": "hera-api-p95",
    "version": 1,
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(api_requests_total[1m])) by (method)",
            "legendFormat": "{{method}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "API Latency p95",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(api_duration_ms_bucket[5m])) by (endpoint, le))",
            "legendFormat": "{{endpoint}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate %",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(api_errors_total[5m])) by (endpoint) / sum(rate(api_requests_total[5m])) by (endpoint) * 100",
            "legendFormat": "{{endpoint}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Status Code Distribution",
        "type": "piechart",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(api_requests_total) by (status)"
          }
        ]
      },
      {
        "id": 5,
        "title": "Slowest Endpoints (p99)",
        "type": "bargraph",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.99, sum(rate(api_duration_ms_bucket[5m])) by (endpoint, le)))"
          }
        ]
      },
      {
        "id": 6,
        "title": "Rate Limit Hits",
        "type": "graph",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(api_requests_total{status=\"429\"}[5m])) by (endpoint)",
            "legendFormat": "{{endpoint}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Report Generation Performance",
        "type": "graph",
        "gridPos": { "x": 0, "y": 24, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(report_latency_ms_bucket[5m])) by (report_type, le))",
            "legendFormat": "{{report_type}}"
          }
        ]
      }
    ]
  }
}