{
  "$schema": "https://railway.app/railway.schema.json",
  "name": "HERA Universal ERP",
  "description": "Deploy HERA - The revolutionary 6-table ERP system that handles infinite business complexity without schema changes",
  "icon": "üèóÔ∏è",
  "tags": ["ERP", "Business", "SaaS", "NextJS", "Supabase"],
  "services": [
    {
      "name": "HERA Web App",
      "source": {
        "type": "github",
        "repo": "heraerp/heraerp-prd"
      },
      "builder": "NIXPACKS",
      "buildCommand": "npm ci && npm run build",
      "startCommand": "npm run start",
      "healthcheckPath": "/api/health",
      "envs": {
        "NODE_ENV": {
          "default": "production"
        },
        "NEXT_PUBLIC_SUPABASE_URL": {
          "description": "Your Supabase project URL (required)",
          "required": true
        },
        "NEXT_PUBLIC_SUPABASE_ANON_KEY": {
          "description": "Your Supabase anonymous key (required)",
          "required": true
        },
        "SUPABASE_SERVICE_ROLE_KEY": {
          "description": "Your Supabase service role key (required)",
          "required": true,
          "secret": true
        },
        "DEFAULT_ORGANIZATION_ID": {
          "description": "Default organization UUID for your HERA instance",
          "required": false
        },
        "OPENAI_API_KEY": {
          "description": "OpenAI API key for AI features (optional)",
          "required": false,
          "secret": true
        },
        "RESEND_API_KEY": {
          "description": "Resend API key for email services (optional)",
          "required": false,
          "secret": true
        }
      }
    }
  ]
}