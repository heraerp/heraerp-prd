{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "composite": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "paths": {
      "@hera/entities-core": ["packages/hera-entities-core/src"],
      "@hera/entities-modules/*": ["packages/hera-entities-modules/src/*"]
    }
  }
}