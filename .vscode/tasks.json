{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "HERA: Validate Current File",
      "type": "shell",
      "command": "node",
      "args": ["scripts/auto-validator.js", "--file", "${file}"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "HERA: Auto-Fix Issues",
      "type": "shell",
      "command": "npm",
      "args": ["run", "fix:auto"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "HERA: Start Auto-Validator",
      "type": "shell",
      "command": "npm",
      "args": ["run", "validate:watch"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "hera-validator",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+)\\s+-\\s+(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "üîç Validating",
          "endsPattern": "(‚úÖ All checks passed|‚ùå Validation failed)"
        }
      }
    },
    {
      "label": "HERA: Safe Development Mode",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev:safe"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "HERA: Check Staged Files",
      "type": "shell", 
      "command": "npm",
      "args": ["run", "check:staged"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
