{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HERA Universal Event Payload",
  "type": "object",
  "required": [
    "organization_id",
    "smart_code",
    "transaction_type",
    "transaction_date",
    "lines"
  ],
  "properties": {
    "organization_id": {
      "type": "string",
      "format": "uuid"
    },
    "smart_code": {
      "type": "string",
      "pattern": "^HERA\\.[A-Z]+\\.[A-Z]+\\.[A-Z]+\\.[A-Z]+\\.[vV][0-9]+$"
    },
    "transaction_type": {
      "type": "string"
    },
    "transaction_date": {
      "type": "string"
    },
    "source_entity_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "target_entity_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "business_context": {
      "type": "object"
    },
    "lines": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "line_type"
        ],
        "properties": {
          "line_type": {
            "type": "string"
          },
          "entity_id": {
            "type": [
              "string",
              "null"
            ]
          },
          "quantity": {
            "type": [
              "number",
              "null"
            ]
          },
          "unit_amount": {
            "type": [
              "number",
              "null"
            ]
          },
          "line_amount": {
            "type": [
              "number",
              "null"
            ]
          },
          "description": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    }
  }
}