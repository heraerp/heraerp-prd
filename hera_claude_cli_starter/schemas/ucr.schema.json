{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HERA UCR Bundle",
  "type": "object",
  "required": [
    "version",
    "applies_to"
  ],
  "properties": {
    "version": {
      "type": "integer"
    },
    "effective_from": {
      "type": [
        "string",
        "null"
      ]
    },
    "applies_to": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^HERA\\.[A-Z]+\\.[A-Z]+\\.[A-Z]+\\.[A-Z]+\\.[vV][0-9]+$"
      }
    },
    "account_derivation": {
      "type": "object"
    },
    "commission": {
      "type": "object"
    },
    "tax": {
      "type": "object"
    },
    "posting_flags": {
      "type": "object"
    }
  }
}