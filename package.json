{
  "name": "heraerp",
  "version": "1.2.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run quality:pre-build && node scripts/clear-browser-cache.js && node scripts/inject-build-version.js && next build",
    "start": "next start",
    "lint": "next lint",
    "schema:validate": "node mcp-server/schema-introspection.js validate",
    "schema:types": "node mcp-server/schema-introspection.js types",
    "schema:check": "node mcp-server/check-schema.js",
    "prebuild": "echo 'Pre-build hook - schema validation included in quality checks'",
    "predev": "npm run schema:types",
    "test": "node tests/restaurant-platform-comprehensive.test.js",
    "type-check": "tsc --noEmit",
    "generate-progressive-pwa": "node scripts/generate-progressive-pwa.js create",
    "generate-restaurant-pwa": "node scripts/generate-progressive-pwa.js restaurant",
    "generate-healthcare-pwa": "node scripts/generate-progressive-pwa.js healthcare",
    "generate-retail-pwa": "node scripts/generate-progressive-pwa.js retail",
    "generate-manufacturing-pwa": "node scripts/generate-progressive-pwa.js manufacturing",
    "demo-progressive": "node scripts/generate-progressive-pwa.js demo",
    "list-pwas": "node scripts/generate-progressive-pwa.js list",
    "validate-pwa": "node scripts/generate-progressive-pwa.js validate",
    "migrate-pwa": "node scripts/generate-progressive-pwa.js migrate",
    "test-progressive": "node scripts/test-progressive-system.js",
    "demo-simple": "node scripts/demo-progressive-simple.js",
    "convert-progressive": "node scripts/convert-progressive-page.js",
    "convert-universal": "node scripts/convert-progressive-universal.js",
    "convert-industry": "node scripts/convert-industry.js",
    "conversion-progress": "node scripts/conversion-progress.js",
    "convert-page": "node scripts/convert-page-to-production.js",
    "smart-convert": "node scripts/smart-page-converter.js",
    "start:prod": "NODE_ENV=production next start",
    "db:migrate": "node scripts/run-supabase-migration.js",
    "postinstall": "npm run db:migrate || echo \"Migration skipped\"",
    "test:salon": "cd packages/hera-testing && node bin/simple-test.js salon examples/salon-appointment-booking.yaml",
    "test:salon-validate": "cd packages/hera-testing && node bin/simple-test.js validate examples/salon-appointment-booking.yaml",
    "test:restaurant": "cd packages/hera-testing && node bin/simple-test.js validate examples/restaurant-order-to-cash.yaml",
    "test:business-process": "cd packages/hera-testing && node bin/simple-test.js salon",
    "test:all-industries": "npm run test:salon && npm run test:restaurant",
    "quality:check": "node scripts/quality-check.js",
    "quality:pre-build": "node scripts/pre-build-validate.js",
    "quality:audit": "npm run quality:check && npm run quality:pre-build",
    "quality:fix": "npm run lint -- --fix && npm run format",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "ui:validate": "node scripts/validate-ui-patterns.js",
    "ui:generate": "node scripts/generate-ui-component.js",
    "ui:check": "npm run ui:validate && npm run format:check"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/supabase-js": "^2.55.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.85.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/validator": "^13.15.2",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.6.1",
    "framer-motion": "^11.11.17",
    "isomorphic-dompurify": "^2.26.0",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.294.0",
    "marked": "^16.1.2",
    "next": "^15.4.6",
    "openai": "^5.12.2",
    "pdf-parse": "^1.1.1",
    "react": "^18.3.1",
    "react-day-picker": "^9.8.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.61.1",
    "recharts": "^3.1.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "validator": "^13.15.15",
    "yahoo-finance2": "^2.13.3",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.16",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
