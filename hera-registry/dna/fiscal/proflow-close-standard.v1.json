{
  "version": "1.0.0",
  "industry": "PROFLOW",
  "fiscal_calendar": { "fiscal_year_start": "01-01", "periods": 12 },
  "close_steps": [
    { "step": 1, "name": "Aggregate Revenue", "action": "sum", "scope": "P&L.REVENUE" },
    { "step": 2, "name": "Aggregate Expenses", "action": "sum", "scope": "P&L.EXPENSE" },
    { "step": 3, "name": "Compute Net Income", "action": "calc", "formula": "revenue_total - expense_total" },
    {
      "step": 4,
      "name": "Post Closing JE",
      "action": "post_journal",
      "smart_code": "HERA.ACCOUNTING.FISCAL.CLOSE_JE.v1",
      "lines": [
        { "account_role": "P&L_CLEARING", "dr_cr": "DEBIT_OR_CREDIT", "amount": "net_income" },
        { "account_role": "RETAINED_EARNINGS", "dr_cr": "DEBIT_OR_CREDIT", "amount": "net_income", "reverse": true }
      ]
    },
    { "step": 5, "name": "Zero P&L Balances", "action": "zero_out_pl" },
    { "step": 6, "name": "Lock Period", "action": "lock_period" }
  ],
  "consolidation": {
    "multi_branch": true,
    "eliminations": true
  },
  "metadata": {
    "description": "Standard year-end closing procedure for ProFlow firms (calendar year), reversible, audit logged."
  }
}
